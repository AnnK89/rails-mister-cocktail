<div class="container mt-3">
  <div class="col-12">
    <h1>Cocktails</h1>
  </div>
  <div class="row cards">
    <% @cocktails.each do |cocktail| %>
      <div class="cocktail-card">
        <div class="cocktail-card-image" style="background-image: url(<%= cocktail.picture_url %>)"></div>
        <h4><%= link_to cocktail.name, cocktail_path(cocktail) %></h4>
        <%#= link_to 'Delete', cocktail, method: :delete, data: { confirm: "Are you sure?" } %>
        <!-- <button id="sweet-alert-demo" class="btn btn-primary">Click me!</button> -->
      </div>
    <% end %>
  </div>
</div>





